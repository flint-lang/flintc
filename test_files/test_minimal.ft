use Core.print
use Core.assert

error ErrFn(ErrAssert):
	SpecialAssertion;

def myfn(bool arg) {ErrFn}:
	if not arg:
		throw ErrFn.AssertionFailed("Special Assertion in 'myfn' function failed");

def main():
	myfn(false) catch:
		anyerror(e):
			print("anyerror\n");
		ErrFn(e):
			print("ErrFn:\n");
			print($" - type_id: {e.type_id}\n");
			print($" - value_id: {e.value_id}\n");
			print($" - message: {e.message}\n");
			print($"\nerror is {e}: \"{e.message}\"\n\n");
			throw e;
