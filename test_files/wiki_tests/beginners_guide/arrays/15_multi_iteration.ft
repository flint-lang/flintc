use Core.print

def main():
    i32[,] mat = i32[3, 3](0);
    i32 n = 0;
    // Row-major looping + fills the array
    for u32 y = 0; y < 3; y++:
        for u32 x = 0; x < 3; x++:
            mat[x, y] = n;
            print($"mat[{x}, {y}] = {mat[x, y]}\n");
            n++;

    // Print one empty line in between
    print("\n");

    // Column-major looping
    for u32 x = 0; x < 3; x++:
        for u32 y = 0; y < 3; y++:
            print($"mat[{x}, {y}] = {mat[x, y]}\n");
